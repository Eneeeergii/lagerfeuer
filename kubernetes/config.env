# config.env

# --- K3s Settings ---

# K3s Version to install
K3S_VERSION="v1.28.3+k3s1"

# K3s installation token (used for cluster nodes)
K3S_TOKEN="my-very-secret-token"

# Virtual IP for Kubernetes API (managed by kube-vip)
K3S_API_IP="192.168.0.100"  # Change this to your desired kube-vip IP

# K3s install options
# Note: --tls-san will add K3S_API_IP to API server certs for kube-vip access
INSTALL_K3S_EXEC="server --disable traefik --disable servicelb --write-kubeconfig-mode 644 --tls-san ${K3S_API_IP}"

# Optional: Interface for kube-vip (must match your network interface, e.g., eth0, ens192)
VIP_INTERFACE="enp2s0"
